<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68A36A"
    android:orientation="vertical"
    tools:context=".Fragments.VoteFragment">


    <TextView
        android:id="@+id/textViewvote2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Vote Question"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#131413"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewQuestion2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/questionDescpTextView2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#CC090808"
        android:textSize="20sp" />

</LinearLayout>